<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="newdevise" id='newdevisename'><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div class="newdevise" id='newdeviseemail'><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div class="newdevise" id='newdevisepassword'><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div class="newdevise" id='newdevisepasswordconfirm'><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="newdevise" id='newdevisebutton'><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>